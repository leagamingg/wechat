.main {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 1300rpx;
  background: linear-gradient(180deg, rgb(151, 221, 214) 0%, rgba(189, 175, 145, 0) 100%);
}

.main .top_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 430rpx;
  
}

.main .top_item .toux {
  display: flex;
  position: absolute;
  top: 160rpx;
  height: 160rpx;
  width: 160rpx;
  border: black solid 3rpx;
  border-radius: 90rpx;
}

.main .top_item .name {
  display: flex;
  position: absolute;
  height: 60rpx;
  top: 330rpx;
  width: 750rpx;
}

.main .top_item .name .name_text {
  width: 750rpx;
  text-align: center;
  font-weight: 900;
  font-size: 42rpx;
}

.main .top_item .fans_guan {
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: absolute;
  height: 60rpx;
  top: 390rpx;
  width: 750rpx;
}

.main .top_item .fans_guan .inItem {
  text-align: center;
  height: 60rpx;
  width: 180rpx;
}

.main .threeItem {
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 180rpx;
}

.main .threeItem .items {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10rpx;
  height: 150rpx;
  width: 150rpx;
}

.main .threeItem .items .image {
  height: 120rpx;
  width: 120rpx;
}

.main .threeItem .items .inText {
  text-align: center;
  font-size: 26rpx;
  height: 30rpx;
  width: 140rpx;
}

.main .infor {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 600rpx;
}

.main .infor .inInfor {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160rpx;
  width: 750rpx;
  border: rgba(163, 163, 159, 0.295) solid 5rpx;
}

.main .infor .inInfor .inforIamge {
  height: 120rpx;
  width: 450rpx;
}

.main .infor .inInfor .infor_button {
  width: 100%;
  background-color: transparent;
}
