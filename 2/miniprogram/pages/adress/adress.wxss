.main {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 1500rpx;
  background: linear-gradient(180deg, rgb(151, 221, 214) 0%, rgba(189, 175, 145, 0) 100%);
}

.main .image {
  position: absolute;
  top: 3%;
}

.main .title {
  position: absolute;
  margin-top: 150rpx;
  width: 750rpx;
  font-size: 60rpx;
  font-weight: 600;
  text-align: center;
}

.main .input {
  position: absolute;
  top: 330rpx;
  width: 98%;
  height: 328rpx;
  border: black solid 3px;
  font-size: 42rpx;
  border-radius: 30rpx;
}

.main .input2 {
  position: absolute;
  top: 670rpx;
  right: 0%;
  height: 30rpx;
  border: transparent solid 3px;
}

.main .button {
  position: absolute;
  border: solid 6rpx #383737;
  border-radius: 30rpx;
  top: 750rpx;
}
