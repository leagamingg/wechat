/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 将容器内的元素左对齐 */
  padding: 20rpx;
  overflow:scroll;
  background: linear-gradient(180deg, rgb(151, 221, 214) 0%, rgba(189, 175, 145, 0) 100%);
}

.form-group {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  
}

.label {
  width: 150rpx;
  text-align: left; /* 设置文本左对齐 */
  
}

.input {
  flex: 1;
  height: 60rpx;
  width: 500rpx;
  border: 1rpx solid #333333;
  border-radius: 4rpx;
  padding: 10rpx;
  
}

.button-group {
  display: flex;
  width: 100%;
  /* background-color: black; */
  flex-direction: row;
  justify-content: space-between;
}

.button-group button {
  width: 150px;
  height: 40px;
  background-color: rgb(66, 163, 228);
  color: #fff;
  border-radius: 20px;
  text-align: center;
  line-height: 25px;
  transition: background-color 0.3s;
}
